(defun bm_substring_search (pattern text)
  (let ((N (length text)) (M (length pattern))
	(right nil) (skip 0) (result nil))
    
    (setq right (bm_compile_pattern pattern))
    (let ((i nil) (j nil))      
      (while (progn (setq i (if (not i) 0 (+ i skip)) )
       		    (and (not result) (<= i (- N M))) )
	(setq skip 0)
	(let ((endLoop nil))
	  (while (progn (setq j (if (not j) (1- M) (1- j) ))
			(and (not endLoop) (>= j 0)))
	    (when (/= (-charCodeAt pattern j) (-charCodeAt text (+ i j)))
	      (setq skip (- j (aref right (-charCodeAt text (+ i j)))))
	      (when (< skip 1) (setq skip 1))
	      (setq endLoop 1)
	      )
	    )
	  )
	(when (= 0 skip) (setq result i))
	)
      )
    (if result result N)
    )
  )

