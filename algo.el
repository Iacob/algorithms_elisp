(defun bm_compile_pattern (pattern)
  (let* ((R 256) (M (length pattern)) (right (make-vector R -1)))
    (let ((j -1))
      (while (progn (setq j (1+ j)) (< j M))
	(aset right (-charCodeAt pattern j) j) ) )
    right
    )
  )

